<%= render partial: 'episodes/header', locals: {breadcrumbs: [link_to(raw("<b>#{@comic.name}</b>"), edit_admin_contents_comic_url(id: @comic.id), class: "btn btn-default"), link_to(raw('<b>Episodes</b>'), admin_contents_comic_episodes_url(@comic.id), class: "btn btn-default"), @episode.name]} %>

<%= form_for @episode, {url: admin_contents_comic_episode_url, role: 'form', method: 'put', multipart: true, html: {class: 'form-horizontal'}} do |f| %>

<div class="row">
  <div class="col-md-offset-9 col-md-3">
    <%= button_tag 'Update', type: 'submit', class: "btn btn-default green" %>
    <%= button_tag 'Reset', class: "btn btn-default", type: 'reset' %>
  </div>
</div>

<!-- BEGIN PAGE CONTENT-->
<div class="row">
	<div class="col-md-12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet">
			<div class="portlet-body form">
          
          <%= render partial: 'form', locals: {f: f} %>
          
<% end %>

          <%= render partial: 'form_upload' %>
          
			</div>
		</div>
		<!-- END SAMPLE FORM PORTLET-->
	</div>
</div>
