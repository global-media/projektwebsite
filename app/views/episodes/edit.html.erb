<%= render partial: 'episodes/header', locals: {breadcrumbs: [@comic.name, @episode.name]} %>

<%= form_for @episode, {url: admin_contents_comic_episode_url, role: 'form', method: 'put', multipart: true, html: {class: 'form-horizontal'}} do |f| %>

<div class="row">
	<div class="col-md-11">
    <%= button_tag 'Update Episode', type: 'submit', class: "btn btn-primary pull-right" %>
  </div>
  <div class="col-md-1">
    <%= button_tag 'Reset', class: "btn btn-default pull-right", type: 'reset' %>
  </div>
</div>

<!-- BEGIN PAGE CONTENT-->
<div class="row">
	<div class="col-md-12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet">
			<div class="portlet-body form">
          
          <%= render partial: 'form', locals: {f: f} %>
          
<% end %>

          <%= render partial: 'form_upload' %>
          
			</div>
		</div>
		<!-- END SAMPLE FORM PORTLET-->
	</div>
</div>
<!-- END PAGE CONTENT-->
