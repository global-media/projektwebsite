    <%= render partial: 'customers/header', locals: {breadcrumbs: []} %>
    
    <!-- BEGIN PAGE CONTENT-->
		<div class="row">
			<div class="col-md-12">
				<!-- BEGIN SAMPLE TABLE PORTLET-->
				<div class="portlet">
					<div class="portlet-title">
						<div class="caption">
							<i class="fa fa-user"></i>Customers
						</div>
						<div class="tools">
						  <%= link_to raw('<i class="fa fa-plus"></i>'), new_admin_store_customer_url, alt: "Add" %>              
						  <a class="fullscreen" href="javascript:;" data-original-title="" title=""></a>
         			<a href="javascript:;" class="collapse"></a>
						</div>
					</div>
					<div class="portlet-body">
						<div class="table-scrollable">
							<table class="table table-striped table-bordered table-advance table-hover">
							<thead>
							<tr>
								<th><i class="fa fa-envelope"></i> Email</th>
								<th><i class="fa fa-user"></i> First Name</th>
								<th><i class="fa fa-users"></i> Last Name</th>
								<th><i class="fa fa-pied-piper-alt"></i> Username</th>
								<th>&nbsp;</th>
							</tr>
							</thead>
							<tbody>
							  <% @customers.each do |customer| %>
							  <tr>
                  <td><%= customer.email %></td>
                  <td><%= customer.first_name %></td>
                  <td><%= customer.last_name %></td>
                  <td><%= customer.username %></td>
                  <td>
                    <%= link_to raw('<i class="icon-pencil"> Edit</i>'), edit_admin_store_customer_url(id: customer.id), class: "btn btn-warning btn-xs" %>
                    <%= link_to raw('<i class="icon-trash"> Delete</i>'), admin_store_customer_url(id: customer.id), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this customer?" } %>
                  </td>
  							</tr>
							  <% end %>
							</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- END SAMPLE TABLE PORTLET-->
			</div>
		</div>
		<!-- END PAGE CONTENT-->