    <%= render partial: 'collections/header', locals: {breadcrumbs: []} %>
    
    <%= form_tag  sort_admin_store_collections_url, {role: 'form', method: 'post'} do |f| %>

    <div class="row">
      <div class="col-md-offset-9 col-md-3">
        <%= link_to 'Add', new_admin_store_collection_url, alt: "Add", class: "btn btn-primary green" %>
        <%= button_tag 'Sort', type: 'submit', class: "btn btn-default" %>
      </div>
    </div>
    
    <!-- BEGIN PAGE CONTENT-->
		<div class="row">
			<div class="col-md-12">
				<!-- BEGIN SAMPLE TABLE PORTLET-->
				<div class="portlet">
					<div class="portlet-title">
						<div class="caption">
							<i class="fa fa-link"></i>Collections
						</div>
						<div class="tools">
						  <a class="fullscreen" href="javascript:;" data-original-title="" title=""></a>
         			<a href="javascript:;" class="collapse"></a>
						</div>
					</div>
					<div class="portlet-body">
						<div class="table-scrollable">
							<table class="table table-striped table-bordered table-advance table-hover">
							<thead>
							<tr>
								<th class="col-md-1"><i class="fa fa-sort"></i> Sort</th>
								<th><i class="fa fa-photo"></i> Image</th>
								<th><i class="fa fa-info"></i> Name</th>
								<th class="col-md-2">&nbsp;</th>
							</tr>
							</thead>
							<tbody>
							  <% @collections.each do |collection| %>
							  <%= hidden_field_tag "collection[sort][#{collection.id}][old]", collection.sort %>
							  <tr>
  								<td class="col-md-1"><%= text_field_tag "collection[sort][#{collection.id}][new]", collection.sort, class: 'form-control-size', placeholder: 'Sort #', size: 3, maxlength: 3 %></td>
  								<td><%= image_tag collection.image.url(:thumb), style: "width: 100px; height: 100px;" %></td>
                  <td><%= collection.name %></td>
                  <td class="col-md-2">
                    <%= link_to raw('<i class="icon-pencil"> Edit</i>'), edit_admin_store_collection_url(id: collection.id), class: "btn btn-warning btn-xs" %>
                    <%= link_to raw('<i class="icon-trash"> Delete</i>'), admin_store_collection_url(id: collection.id), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this collection?" } %>
                  </td>
  							</tr>
							  <% end %>
							</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- END SAMPLE TABLE PORTLET-->
			</div>
		</div>
		<!-- END PAGE CONTENT-->
		<% end %>
