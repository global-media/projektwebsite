	<div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:banner_image].blank? %>">
		<label class="col-md-3 control-label" for="form_control_1">Banner Image Upload</label>
 		<div class="col-md-5 fileinput fileinput-<%= @comic.banner_image.exists? ? 'exists' : 'new' %>" data-provides="fileinput">
			<div class="fileinput-<%= @comic.banner_image.exists? ? 'exists' : 'new' %> thumbnail">
			  <%= image_tag @comic.banner_image.url(:medium) %>
			</div>
<!--			<div class="fileinput-preview fileinput-<%= !@comic.banner_image.exists? ? 'exists' : 'new' %> thumbnail"></div> -->
