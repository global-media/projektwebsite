<div class="form-body">
	<div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:name].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Name</label>
		<div class="col-md-10">
      <%= f.text_field :name, class: "form-control#{' error' unless @comic.errors[:name].blank?}", placeholder: 'Enter Name', id: 'form_control_1' %>			
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:description].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Description</label>
		<div class="col-md-10">
      <%= f.text_field :description, class: "form-control#{' error' unless @comic.errors[:description].blank?}", placeholder: 'Enter Description', id: 'form_control_1' %>			
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:category_id].blank? %>">  	
		<label class="col-md-2 control-label" for="form_control_1">Category</label>
		<div class="col-md-10">
			<div class="md-radio-inline">
			  <% category_options.each do |name, id| %>
				<div class="md-radio">
					<%= f.radio_button :category_id, id, class: 'md-radiobtn', id: "radio#{id}" %>
					<label for="radio<%= id %>">
					<span></span>
					<span class="check"></span>
					<span class="box"></span>
					<%= name %> </label>
				</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="form-group form-md-line-input">
	  <label class="col-md-2 control-label" for="form_control_1">Tags</label>
		<div class="col-md-10">
      <%= f.select :tag_ids, tagging_options, {selected: @comic.tags.collect(&:id)}, {class: "form-control input-xlarge select2me", multiple: true, id: 'form_control_1'} %>
			<div class="form-control-focus"></div>
		</div>
	</div>
  <div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:publish_at].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Publish Time</label>
		<div class="col-md-6">
			<div class="input-group date form_datetime">
				<%= f.text_field :publish_at, value: datetime_value(@comic.publish_at), class: "form-control#{' error' unless @comic.errors[:publish_at].blank?}", size: 16, readonly: 'readonly', placeholder: 'Select Publish Time' %>	
				<span class="input-group-btn">
				<button class="btn default date-set" type="button"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
			<!-- /input-group -->
		</div>
	</div>
  <div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:retract_at].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Retract Time</label>
		<div class="col-md-6">
			<div class="input-group date form_datetime">
				<%= f.text_field :retract_at, value: datetime_value(@comic.retract_at), class: "form-control#{' error' unless @comic.errors[:retract_at].blank?}", size: 16, readonly: 'readonly', placeholder: 'Select Retract Time' %>	
				<span class="input-group-btn">
				<button class="btn default date-set" type="button"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
			<!-- /input-group -->
		</div>
	</div>
	<div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:image].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Image Upload</label>
 		<div class="col-md-6 fileinput fileinput-new" data-provides="fileinput">
			<div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
			  <%= image_tag @comic.image.url(:medium) %>
			</div>
			<div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
			<div>
				<span class="btn default btn-file">
  				<span class="fileinput-new">Select image </span>
  				<span class="fileinput-exists">Change </span>
				  <%= f.file_field :image, as: :file, class: "form-control#{' error' unless @comic.errors[:image].blank?}" %>
				</span>
				<a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput">Remove </a>
			</div>
		</div>
	</div>
</div>
