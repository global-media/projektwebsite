<div class="form-body">
	<div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:name].blank? %>">
		<label class="col-md-3 control-label" for="form_control_1">Name</label>
		<div class="col-md-9">
      <%= f.text_field :name, class: "form-control#{' error' unless @comic.errors[:name].blank?}", placeholder: 'Enter Name', id: 'form_control_1' %>			
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:description].blank? %>">
		<label class="col-md-3 control-label" for="form_control_1">Description</label>
		<div class="col-md-9">
      <%= f.text_field :description, class: "form-control#{' error' unless @comic.errors[:description].blank?}", placeholder: 'Enter Description', id: 'form_control_1' %>			
      <div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:category_id].blank? %>">  	
		<label class="col-md-3 control-label" for="form_control_1">Category</label>
		<div class="col-md-9">
		  <%= f.select :category_id, category_options, {selected: @comic.category_id}, {class: "form-control input-xlarge select2me", id: 'form_control_1'} %>
			<div class="form-control-focus"></div>
		</div>
	</div>
	<div class="form-group form-md-line-input">
	  <label class="col-md-3 control-label" for="form_control_1">Tags</label>
		<div class="col-md-9">
      <%= f.select :tag_ids, tagging_options, {selected: @comic.tags.collect(&:id)}, {class: "form-control input-xlarge select2me", multiple: true, id: 'form_control_1'} %>
			<div class="form-control-focus"></div>
		</div>
	</div>
  <div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:publish_at].blank? %>">
		<label class="col-md-3 control-label" for="form_control_1">Publish Time</label>
		<div class="col-md-5">
			<div class="input-group date form_datetime">
				<%= f.text_field :publish_at, value: datetime_value(@comic.publish_at), class: "form-control#{' error' unless @comic.errors[:publish_at].blank?}", size: 16, placeholder: 'Select Publish Time' %>	
				<span class="input-group-btn">
				<button class="btn default date-set" type="button"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
			<!-- /input-group -->
		</div>
	</div>
  <div class="form-group form-md-line-input<%' has-error' unless @comic.errors[:retract_at].blank? %>">
		<label class="col-md-3 control-label" for="form_control_1">Retract Time</label>
		<div class="col-md-5">
			<div class="input-group date form_datetime">
				<%= f.text_field :retract_at, value: datetime_value(@comic.retract_at), class: "form-control#{' error' unless @comic.errors[:retract_at].blank?}", size: 16, placeholder: 'Select Retract Time' %>	
				<span class="input-group-btn">
				<button class="btn default date-set" type="button"><i class="fa fa-calendar"></i></button>
				</span>
			</div>
			<!-- /input-group -->
		</div>
	</div>
