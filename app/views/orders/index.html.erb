    <%= render partial: 'orders/header', locals: {breadcrumbs: []} %>
    
    <!-- BEGIN PAGE CONTENT-->
		<div class="row">
			<div class="col-md-12">
				<!-- BEGIN SAMPLE TABLE PORTLET-->
				<div class="portlet">
					<div class="portlet-title">
						<div class="caption">
							<i class="fa fa-shopping-cart"></i>Orders
						</div>
						<div class="tools">
						  <a class="fullscreen" href="javascript:;" data-original-title="" title=""></a>
         			<a href="javascript:;" class="collapse"></a>
						</div>
					</div>
					<div class="portlet-body">
						<div class="table-scrollable">
							<table class="table table-striped table-bordered table-advance table-hover">
							<thead>
							<tr>
								<th><i class="fa fa-user"></i> Full Name</th>
								<th><i class="fa fa-question"></i> Status</th>
								<th><i class="fa fa-money"></i> Subtotal</th>
								<!--th><i class="fa fa-bank"></i> Tax</th>
								<th><i class="fa fa-plus-square-o"></i> Shipping</th-->
								<th><i class="fa fa-eraser"></i> Discount</th>
								<th><i class="fa fa-bank"></i> Total</th>
								<th class="col-md-4">&nbsp;</th>
							</tr>
							</thead>
							<tbody>
							  <% @orders.each do |order| %>
							  <tr>
                  <td><%= order.customer.full_name %></td>
                  <td><%= order.status %></td>
                  <td class="value"><%= money_value(order.subtotal) %></td>
                  <!--td class="value"><%= money_value(order.tax) %></td>
                  <td class="value"><%= money_value(order.shipping) %></td-->
                  <td class="value"><%= money_value(order.discount) %></td>
                  <td class="value col-md-2"><%= money_value(order.total) %></td>
                  <td class="col-md-4">
                    <%= link_to raw('<i class="icon-eye"> View</i>'), admin_store_order_url(id: order.id), class: "btn btn-primary btn-xs" %>
                    <% if order.opened? %>
                      <%= link_to raw('<i class="icon-arrow-right"> Process</i>'), process_admin_store_orders_url(id: order.id), class: "btn green btn-xs", method: :post, data: { confirm: "Are you sure you want to process this order?" } %>
                    <% else %>
                      <%= link_to raw('<i class="icon-rotate-left"> Revert</i>'), revert_admin_store_orders_url(id: order.id), class: "btn btn-warning btn-xs", method: :post, data: { confirm: "Are you sure you want to revert this order?" } %>
                    <% end %>
                    <% unless order.cancelled? %>
                      <%= link_to raw('<i class="icon-ban"> Cancel</i>'), cancel_admin_store_orders_url(id: order.id), class: "btn btn-danger btn-xs", method: :post, data: { confirm: "Are you sure you want to cancel this order?" } %>
                    <% end %>
                  </td>
  							</tr>
							  <% end %>
							</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- END SAMPLE TABLE PORTLET-->
			</div>
		</div>
		<!-- END PAGE CONTENT-->
