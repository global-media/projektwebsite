
<div class="form-body">
  <div class="form-group form-md-line-input">
		<label class="col-md-2 control-label" for="form_control_1">Product Name</label>
		<div class="col-md-10">
      <%= text_field_tag "product_item_name_option", order_item.product_item.name_option, class: "form-control", placeholder: 'Enter Product Name', readonly: 'readonly' %>
      <!--p class="help-block">Example block-level help text here.</p-->
      <div class="form-control-focus"></div>
		</div>
  </div>
  <div class="form-group form-md-line-input<%' has-error' unless order_item.errors[:sold_price].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Sold Price</label>
		<div class="col-md-10">
		  <div class="input-group">  
  		  <span class="input-group-addon">IDR</span>
        <%= text_field_tag "order_item[#{order_item.id}][sold_price]", number_format(order_item.sold_price), class: "form-control#{' error' unless order_item.errors[:sold_price].blank?}", placeholder: 'Enter Sold Price', id: 'form_control_1' %>
        <div class="form-control-focus"></div>
      </div>
		</div>
	</div>
  <div class="form-group form-md-line-input<%' has-error' unless order_item.errors[:original_price].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Original Price</label>
		<div class="col-md-10">
		  <div class="input-group">        
  		  <span class="input-group-addon">IDR</span>
        <%= text_field_tag "order_item[#{order_item.id}][original_price]", number_format(order_item.original_price), class: "form-control#{' error' unless order_item.errors[:original_price].blank?}", placeholder: 'Enter Original Price', id: 'form_control_1', readonly: 'readonly' %>
        <div class="form-control-focus"></div>
      </div>
		</div>
	</div>
  <div class="form-group form-md-line-input<%' has-error' unless order_item.errors[:quantity].blank? %>">
		<label class="col-md-2 control-label" for="form_control_1">Quantity</label>
		<div class="col-md-10">
      <%= text_field_tag "order_item[#{order_item.id}][quantity]", number_format(order_item.quantity), class: "form-control#{' error' unless order_item.errors[:quantity].blank?}", placeholder: 'Enter Quantity', id: 'form_control_1' %>
      <div class="form-control-focus"></div>
		</div>
	</div>
</div>