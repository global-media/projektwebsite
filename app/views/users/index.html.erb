    <%= render partial: 'users/header', locals: {breadcrumbs: []} %>

    <div class="row">
      <div class="col-md-offset-10 col-md-2">
        <%= link_to 'Add', new_admin_settings_user_url, alt: "Add", class: "btn btn-primary green" %>
      </div>
    </div>
    
    <!-- BEGIN PAGE CONTENT-->
		<div class="row">
			<div class="col-md-12">
				<!-- BEGIN SAMPLE TABLE PORTLET-->
				<div class="portlet">
					<div class="portlet-title">
						<div class="caption">
							<i class="fa fa-users"></i>Users
						</div>
						<div class="tools">
						  <a class="fullscreen" href="javascript:;" data-original-title="" title=""></a>
         			<a href="javascript:;" class="collapse"></a>
						</div>
					</div>
					<div class="portlet-body">
						<div class="table-scrollable">
							<table class="table table-striped table-bordered table-advance table-hover">
							<thead>
							<tr>
								<th><i class="fa fa-envelope"></i> Email</th>
								<th><i class="fa fa-user"></i> First Name</th>
								<th><i class="fa fa-group"></i> Last Name</th>
								<th><i class="fa fa-pied-piper-alt"></i> Username</th>
								<th class="col-md-2">&nbsp;</th>
							</tr>
							</thead>
							<tbody>
							  <% @users.each do |user| %>
                  <td><%= user.email %></td>
                  <td><%= user.first_name %></td>
                  <td><%= user.last_name %></td>
                  <td><%= user.username %></td>
                  <td class="col-md-2">
                    <%= link_to raw('<i class="icon-pencil"> Edit</i>'), edit_admin_settings_user_url(id: user.id), class: "btn btn-warning btn-xs" %>
                    <%= link_to raw('<i class="icon-trash"> Delete</i>'), admin_settings_user_url(id: user.id), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
                  </td>
  							</tr>
							  <% end %>
							</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- END SAMPLE TABLE PORTLET-->
			</div>
		</div>
		<!-- END PAGE CONTENT-->
