<!-- BEGIN REGISTRATION FORM -->
<%= form_tag signup_admin_url, method: :post, class: "register-form", multipart: true, style: style do %>
	<h3>Sign Up</h3>
	<p class="hint">
		 Enter your account details below:
	</p>
	<div class="form-group">
		<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
		<label class="control-label visible-ie8 visible-ie9">Email</label>
		<%= email_field_tag 'user[email]', nil, {class: "form-control placeholder-no-fix required", placeholder: "Email"} %>
	</div>
	<div class="form-group">
		<label class="control-label visible-ie8 visible-ie9">Username</label>
    <%= text_field_tag 'user[username]', nil, {class: "form-control placeholder-no-fix required", placeholder: "Username",  autocomplete: "off"} %>
	</div>
	<div class="form-group">
		<label class="control-label visible-ie8 visible-ie9">Password</label>
		<%= password_field_tag 'user[password]', nil, {class: "form-control placeholder-no-fix required", placeholder: "Password", autocomplete: "off"} %>
	</div>
	<div class="form-group">
		<label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
		<%= password_field_tag 'user[confirm_password]', nil, {class: "form-control placeholder-no-fix required", placeholder: "Re-type Your Password", autocomplete: "off"} %>
	</div>
	<div class="form-group">
		<label class="control-label visible-ie8 visible-ie9">First Name</label>
    <%= text_field_tag 'user[first_name]', nil, {class: "form-control placeholder-no-fix", placeholder: "First Name",  autocomplete: "off"} %>
	</div>
	<div class="form-group">
		<label class="control-label visible-ie8 visible-ie9">Last Name</label>
    <%= text_field_tag 'user[last_name]', nil, {class: "form-control placeholder-no-fix required", placeholder: "Last Name",  autocomplete: "off"} %>
	</div>
	<div class="form-group margin-top-20 margin-bottom-20">
		<label class="check">
		<input type="checkbox" name="tnc"/> I agree to the <a href="javascript:;">
		Terms of Service </a>
		& <a href="javascript:;">
		Privacy Policy </a>
		</label>
		<div id="register_tnc_error">
		</div>
	</div>
	<div class="form-actions">
		<%= button_tag 'Back', name: 'back', class: "btn btn-default", id: "register-back-btn" %>
		<%= button_tag 'Submit', name: 'sign_up', class: "btn btn-success uppercase pull-right", id: "register-submit-btn" %>  
	</div>
<% end %>
<!-- END REGISTRATION FORM -->