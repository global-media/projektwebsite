    <%= render partial: 'news/header', locals: {breadcrumbs: []} %>
    
    <%= form_tag  sort_admin_contents_news_index_url, {role: 'form', method: 'post'} do |f| %>
    
    <div class="row">
  		<div class="col-md-12">
        <%= button_tag 'Sort News', type: 'submit', class: "btn btn-primary pull-right" %>
      </div>
    </div>
    
    <!-- BEGIN PAGE CONTENT-->
		<div class="row">
			<div class="col-md-12">
				<!-- BEGIN SAMPLE TABLE PORTLET-->
				<div class="portlet">
					<div class="portlet-title">
						<div class="caption">
							<i class="fa fa-rss"></i>News
						</div>
						<div class="tools">
						  <%= link_to raw('<i class="fa fa-plus"></i>'), new_admin_contents_news_url, alt: "Add" %>              
						  <a class="fullscreen" href="javascript:;" data-original-title="" title=""></a>
         			<a href="javascript:;" class="collapse"></a>
						</div>
					</div>
					<div class="portlet-body">
						<div class="table-scrollable">
							<table class="table table-striped table-bordered table-advance table-hover">
							<thead>
							<tr>
								<th><i class="fa fa-sort"></i> Sort</th>
								<th><i class="fa fa-info"></i> Title</th>
								<th><i class="fa fa-user"></i> Author</th>
								<th><i class="fa fa-link"></i> Link URL</th>
								<th>&nbsp;</th>
							</tr>
							</thead>
							<tbody>
							  <% @news_items.each do |news| %>
							  <%= hidden_field_tag "news[sort][#{news.id}][old]", news.sort %>
							  <tr>
  								<td><%= text_field_tag "news[sort][#{news.id}][new]", news.sort, class: 'form-control-size', placeholder: 'Sort #', size: 3, maxlength: 3 %></td>
                  <td><%= news.title %></td>
                  <td><%= news.author %></td>
                  <td><%= news.link_url %></td>
                  <td>
                    <%= link_to raw('<i class="icon-pencil"> Edit</i>'), edit_admin_contents_news_url(id: news.id), class: "btn btn-warning btn-xs" %>
                    <%= link_to raw('<i class="icon-trash"> Delete</i>'), admin_contents_news_url(id: news.id), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this news?" } %>
                  </td>
  							</tr>
							  <% end %>
							</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- END SAMPLE TABLE PORTLET-->
			</div>
		</div>
		<!-- END PAGE CONTENT-->
		<% end %>
